{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "airbnb-base",
    "overrides": [
        {
            "files": ["**/*.js", "**/*.mjs"]
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "never"],
        "no-console": "off",
        "import/extensions": ["error", "ignorePackages"]
    }
}
